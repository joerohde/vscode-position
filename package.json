{
    "name": "vscode-position",
    "displayName": "vscode-position",
    "description": "Get and Set cursor position by byte offset",
    "version": "1.1.2",
    "publisher": "jtr",
    "license": "MIT",
    "icon": "other/icon.png",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Other"
    ],
    "galleryBanner": {
        "color": "#516084",
        "theme": "dark"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "extensionKind": [
        "workspace",
        "ui"
    ],
    "main": "./dist/extension.js",
    "browser": "./dist/web/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "position.goto",
                "title": "Go to Position"
            }
        ],
        "keybindings": [
            {
                "command": "position.goto",
                "key": "ctrl+alt+g",
                "mac": "ctrl+cmd+g",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "vscode-position",
            "properties": {
                "vscode-position.positionName": {
                    "type": "string",
                    "default": "Pos",
                    "description": "Display name of position on status bar."
                }
            }
        }
    },
    "scripts": {
        "build": "npm run compile-web",
        "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test.js",
		"pretest": "npm run compile-web",
		"vscode:prepublish": "npm run package-web",
		"compile-web": "webpack",
		"watch-web": "webpack --watch",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"run-in-browser": "vscode-test-web --browserType=chromium --version=stable --extensionDevelopmentPath=. ."
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/joerohde/vscode-position"
    },
    "devDependencies": {
		"@types/vscode": "^1.40.0",
		"@types/mocha": "^9.0.0",
		"eslint": "^8.4.1",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
        "ts-node": "10.4.0",
		"@vscode/test-web": "^0.0.15",
		"ts-loader": "^9.2.5",
		"webpack": "^5.65.0",
		"webpack-cli": "^4.8.0",
		"@types/webpack-env": "^1.16.2",
		"assert": "^2.0.0",
		"process": "^0.11.10"
    }
}
